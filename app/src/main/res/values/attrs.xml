<resources>
    <declare-styleable name="CustomEditText">
        <attr name="edittextfont" format="string" />
        <attr name="edittextfontHint" format="string" />
        <attr name="edittextpwd" format="string" />
        <attr name="editcharpwd" format="string" />
    </declare-styleable>

    <attr name="cropImageStyle" format="reference" />

    <declare-styleable name="CropImageView">
        <attr name="highlightColor" format="reference|color" />
        <attr name="showThirds" format="boolean" />
        <attr name="showHandles">
            <enum name="changing" value="0" />
            <enum name="always" value="1" />
            <enum name="never" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="CustomFontTextView">
        <attr name="fontName"/>
    </declare-styleable>

    <declare-styleable name="signature">
        <attr name="enableSignature" format="boolean" />
        <attr name="penSize" format="dimension"/>
        <attr name="penColor" format="color"/>
        <attr name="backgroundColor" format="color"/>
    </declare-styleable>

</resources>